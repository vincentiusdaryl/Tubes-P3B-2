<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"

    >

    <LinearLayout
        android:layout_width="123pt"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="10dp"

        >

        <TextView
            android:id="@+id/tv_titleMatkulPrasyarat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matematika Diskret"

            >

        </TextView>

        <TextView
            android:id="@+id/tv_statusMatkulPrasyarat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="status matkul"

            >



        </TextView>


    </LinearLayout>

    <ImageButton
        android:layout_marginLeft="50dp"
        android:id="@+id/ceklis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/singlecheckout"
        android:backgroundTint="@color/green">

    </ImageButton>

</LinearLayout>